= render 'shared/admin_header'

main class="main-content"
  .dashboard-container 
    .booking-header
      h1.booking-title List Products
    .card 
      .card-header
        h3.card-title Recent Products 
        a.btn.btn-primary href=new_backyard_product_path style="padding:10px;"
          | Add New
      .table-responsive
        table.bookings-table.table-responsive-sm
          thead
            tr
              th ID
              th Title
              th Display Image
              th
          tbody
            - @records.each do |product|
              tr
                td.guest-name style="padding-left:10px;"
                  = product.id
                td.guest-name style="padding-left:10px;"
                  = product.title
                td.guest-name style="padding-left:10px;"
                  = image_tag url_for(product.display_image_url), height: '50'
                td.booking-actions
                  = link_to(edit_backyard_product_path(product), class: "btn btn-sm btn-secondary") do
                    svg.btn-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                      path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                      path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1- 4 9.5-9.5z"
      .card-footer
        == pagy_bootstrap_nav(@pagy) 

