      .user-dropdown
        button.dropdown-toggle#userDropdownToggle
          .avatar 
            = 'A'
          .user-info
            div style="font-size: 0.875rem; font-weight: 500; color: #374151;" 
              = current_admin.email
          svg.chevron-down xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            polyline points="6 9 12 15 18 9"
        .dropdown-menu#userDropdownMenu style="margin-left: -112px;"
          .dropdown-header
            / .user-name 
              / = current_admin.name
            .user-email 
              = current_admin.email
          / button.dropdown-item
          /   svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          /     path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"
          /     circle cx="12" cy="7" r="4"
          /   | Profile Settings
          / button.dropdown-item
          /   svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          /     rect x="3" y="11" width="18" height="11" rx="2" ry="2"
          /     circle cx="12" cy="16" r="1"
          /     path d="M7 11V7a5 5 0 0 1 10 0v4"
          /   | Privacy & Security

          = button_to destroy_admin_session_path, method: :delete, class: "dropdown-item logout" do
            svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
              path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"
              polyline points="16 17 21 12 16 7"
              line x1="21" y1="12" x2="9" y2="12"
            | Logout
            
= render 'shared/sidebar'

