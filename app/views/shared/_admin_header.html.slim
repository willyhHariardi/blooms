      button.menu-toggle#menuToggle
        svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
          line(x1="3" y1="12" x2="21" y2="12")
          line(x1="3" y1="6" x2="21" y2="6")
          line(x1="3" y1="18" x2="21" y2="18")
      h1.header-title Bloom  
      / .search-container
      /   svg.search-icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
      /     circle(cx="11" cy="11" r="8")
      /     line(x1="21" y1="21" x2="16.65" y2="16.65")
